<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weightLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription,RtlHardcoded,HardcodedText">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAA" />

    <TextView
        android:id="@+id/textWeight"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/layoutMark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:minWidth="70dp"
        android:text="Ocena: " />

    <TextView
        android:id="@+id/title"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/layoutWeight"
        android:layout_alignBottom="@id/layoutWeight"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:minWidth="70dp"
        android:text="Waga: " />

    <LinearLayout
        android:id="@+id/layoutMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/textWeight"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnDecrease"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:minWidth="45dp"
            android:paddingLeft="14dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp"
            tools:srcCompat="@drawable/ic_navigate_before"
            tools:tint="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/markValue"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            tools:text="bdb" />

        <ImageButton
            android:id="@+id/btnIncrease"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:contentDescription=""
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="14dp"
            android:paddingBottom="8dp"
            tools:src="@drawable/ic_navigate_next"
            tools:tint="?android:attr/textColorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutMark"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/title"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnDecrease2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:minWidth="45dp"
            android:paddingLeft="14dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp"
            tools:src="@drawable/ic_navigate_before"
            tools:tint="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/markValue2"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            tools:text="5" />

        <ImageButton
            android:id="@+id/btnIncrease2"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:contentDescription=""
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="14dp"
            android:paddingBottom="8dp"
            tools:src="@drawable/ic_navigate_next"
            tools:tint="?android:attr/textColorPrimary" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/layoutWeight"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnDeleteMark"
        android:layout_toLeftOf="@+id/btnDeleteMark"
        android:layout_toEndOf="@+id/layoutMark"
        android:layout_toRightOf="@+id/layoutMark">

        <include
            android:id="@+id/markState"
            layout="@layout/virtual_mark_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/btnDeleteMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/layoutMark"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:background="?android:selectableItemBackground"
        android:padding="8dp"
        tools:src="@drawable/ic_delete"
        tools:tint="?android:attr/textColorPrimary" />

    <ImageButton
        android:id="@+id/btnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/layoutWeight"
        android:layout_alignBottom="@id/layoutWeight"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:background="?android:selectableItemBackground"
        android:padding="8dp"
        tools:src="@drawable/ic_more"
        tools:tint="?android:attr/textColorPrimary" />
</RelativeLayout>