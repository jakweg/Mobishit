<resources>
    <attr name="backgroundSecondaryColor" format="color" />
    <attr name="separatorColor" format="color" />
    <attr name="colorAccentOnDark" format="color" />
    <attr name="navViewTextColor" format="color" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="backgroundSecondaryColor">#F5F5F5</item>
        <item name="navViewTextColor">@drawable/drawer_item_text_light</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundSecondaryColor">#424242</item>
        <item name="navViewTextColor">@drawable/drawer_item_text_dark</item>
    </style>

    <style name="AppBlackTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="backgroundSecondaryColor">#000000</item>
        <item name="navViewTextColor">@drawable/drawer_item_text_dark</item>
    </style>


    <style name="BottomSheetDialogLight" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapperLight</item>
        <item name="separatorColor">#AAA</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="bottomSheetStyleWrapperLight" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_bg_light</item>
    </style>


    <style name="BottomSheetDialogDark" parent="Theme.Design.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapperDark</item>
        <item name="separatorColor">#AAA</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottomSheetStyleWrapperDark" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_bg_dark</item>
    </style>


    <style name="BottomSheetDialogBlack" parent="Theme.Design.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapperBlack</item>
        <item name="separatorColor">#AAA</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bottomSheetStyleWrapperBlack" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_bg_black</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TimetableDayTab" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>